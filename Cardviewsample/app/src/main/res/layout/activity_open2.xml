<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/i1"
        android:layout_alignParentTop="true"
        android:src="@drawable/peru1"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1"
        android:layout_marginTop="4dp"
        android:gravity="center">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="6sp"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Managala Perumal Temple\nParihara deivam and petchiammal thalainadan shivanada perumal thoondil kasavadan, mundasamy, chinnathambi, irulappan pattrayan patrathi people worship all these god here. In this temple moolavar is the managala perumal."
                android:layout_below="@+id/i1"
                android:textSize="18dp" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

